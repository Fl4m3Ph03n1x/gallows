<p> 
    Turns left: <%= @tally.turns_left %>
</p>

<p> 
    Word so far: <%= show_letters(@tally.letters) %>
</p>

<p> 
    Letters used: <%= show_letters(@tally.guesses) %>
</p>

<%= if game_over?(@tally) do %>
    <%= new_game_button(@conn) %>
<% else %>
    <%= form_for(@conn, Routes.hangman_path(@conn, :make_move), [as: :make_move, method: :put], fn form -> %>
        <%= text_input(form, :guess) %>
        <%= submit("Make next move") %>
    <% end) %>
<% end %>